<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/person_name_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person Name"/>

    <EditText
        android:id="@+id/person_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <TextView
        android:id="@+id/drug_name_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drug Name"/>

    <EditText
        android:id="@+id/drug_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <TextView
        android:id="@+id/drug_dosage_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drug Dosage"/>

    <EditText
        android:id="@+id/drug_dosage_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <TextView
        android:id="@+id/drug_frequency_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drug Frequency"/>

    <EditText
        android:id="@+id/drug_frequency_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <TextView
        android:id="@+id/drug_route_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drug Route"/>

    <EditText
        android:id="@+id/drug_route_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

</LinearLayout>
